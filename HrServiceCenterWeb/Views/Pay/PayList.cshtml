
@{
    ViewBag.Title = "缴存管理";
}
<!-- import opt js-->
<script src="~/JS/pay.PayOpt.js"></script> 
<div class="container container-layout">
    <div class="page-header">
        <h3>发放管理.<small>&nbsp;发放列表</small></h3>
    </div>
    <div id="pnlSearch">
        <div class="row">
            <div class="col-md-2">
                <input type="text" id="txtQuery" style="width:180px;" class="form-control panelseach-text" placeholder="请输入关键字...">
            </div>
            <div class="col-md-1">
                <a class="btn btn-primary btn-sm" href="javascript:void(0)" onclick="opt.query()"><i class="fa fa-search"></i> 快速查询</a>
            </div>
            <div class="col-md-5">
                <a class="btn btn-primary btn-sm" href="javascript:void(0)" onclick="opt.add()"><i class="fa fa-file-o" aria-hidden="true"></i> 新建发放</a>
                <a class="btn btn-primary btn-sm" href="javascript:void(0)" onclick="opt.edit()"><i class="fa fa-circle-o" aria-hidden="true"></i> 编辑发放</a>
                <a class="btn btn-danger btn-sm" href="javascript:void(0)" onclick="opt.delete()"><i class="fa fa-address-book-o" aria-hidden="true"></i> 删除</a>
            </div>
        </div>

    </div>
    <!-- 数据列表 -->
    <div id="dgContainer" style="margin:20px 0;">
        <table id="dg" class="easyui-datagrid" title="" style="width:100%;height:100%"
               data-options="idField:'a',
			        singleSelect:true,collapsible:false,rownumbers:true,striped:true,loadFilter:pagerFilter,
			        autoRowHeight:true,
			        pagination:true,
			        pageSize:10,pageList:[10,20,30,40,50,100]">
            <thead>
                <tr>
                    <th data-options="field:'PayId',width:100">ID</th>
                    <th data-options="field:'PayTitle',width:300">标题</th>
                    <th data-options="field:'CompanyName',width:120">发放单位</th>
                    <th data-options="field:'PayMonth',width:120">发放月份</th>
                    <th data-options="field:'CreateTime',width:120">创建时间</th>
                    <th data-options="field:'CreatorName',width:120">创建人</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


