
@{
    ViewBag.Title = "缴存发放";
}
<!-- import opt js-->
<script src="~/JS/pay.PaySendOpt.js"></script>
<script type="text/javascript">
    var dataId = 0;
</script>
<link href="~/Library/easyui/themes/default/easyui.css" rel="stylesheet" />
<div class="container container-layout">
    <div class="page-header">
        <h3>发放管理.<small>&nbsp;<a href="~/Pay/PayList">发放列表</a></small>.<small>&nbsp;发放表</small></h3>
    </div>


    <div style="margin:20px 0;"></div>
    <div>
        <form class="form-horizontal" id="formCompany">
            <label class="col-sm-2 control-label">公司名称</label>
            <div class="col-sm-10">
                <input id="cmpname" class="easyui-combobox" form-field-name="CompanyName" form-control-type="textbox" data-options="valueField: 'CompanyId',textField: 'Name',required:true,editable:false" style="height:30px;width:20%" />
            </div>
            <label class="col-sm-2 control-label">发放表名称</label>
            <div class="col-sm-10">
                <input type="text" id="tempname" style="height:30px;width:20%" class="form-control panelseach-text" data-options="required:true">
            </div>
            <label class="col-sm-2 control-label">发放月份</label>
            <div class="col-sm-10">
                <input id="datebox" editable="false" name="attYearMonth" class="easyui-datebox" style="height:30px;width:20%" />
            </div>
            <label class="col-sm-2 control-label">发放总金额</label>
            <div class="col-sm-10">
                <label id="paylab" class="col-sm-10">0</label>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-primary" onclick="opt.loadTable();return false;">加载模版</button>
                    <button class="btn btn-primary" onclick="opt.save();return false;">创建发放表</button>
                    @*<button class="btn btn-success" onclick="opt.save();return false;">保存数据</button>
                    <button class="btn btn-warning" onclick="opt.delete();return false;">删除发放表</button>*@
                </div>
            </div>
        </form>
    </div>


    <div id="dgContainer" style="margin:20px 0;">
        <table id="dg" class="easyui-datagrid" title="" style="width:100%;height:100%"
               data-options="idField:'a',
			        singleSelect:true,collapsible:false,rownumbers:true,striped:true,loadFilter:pagerFilter,
			        autoRowHeight:true,
			        pagination:true,
                    autoEditing: true,
                    onLoadSuccess:opt.loadCountLab,
			        pageSize:10,pageList:[10,20,30,40,50,100]"></table>
    </div>
</div>

